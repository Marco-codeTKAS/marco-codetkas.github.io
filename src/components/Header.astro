---
import Icon from "./Icon.astro";
import Imagen from "./Imagen.astro";
---

<section class="flex flex-wrap justify-around items-center pt-[120px] pb-[80px] gap-6 sm:gap-0 sm:py-[120px] ">
  <div class="basis-3/6"> 
    <h2 class="text-xl font-extralight">
      Hola, me llamo Marco Antonio y soy....
    </h2>
    <h1 class="text-5xl font-medium TextColor pb-3">Programador web</h1>
    <h2 class="text-xl font-extralight">
      Me encanta el desarrollo web por el gran alcance que ofrece.
    </h2>
    <div class="flex mt-6 gap-[40px] ">
      <a
        href="src/assets/Doc/CV Marco Antonio Renteria Ramirez.pdf"
        download
        target="_blank"
        id="downloadCV"
        class="flex button gap-3 px-3 py-2 text-sm shadow-sm font-normal text-white bg-gradient-to-r from-[#00519C] to-[#0AC5B9] rounded-[3px]"
      >
        <span> Descargar mi CV</span>
        <object
          data="src/assets/icons/downloadIcon.svg"
          type="image/svg+xml"
          class=""
          width="15px"></object>
      </a>
      <script>
        // const btn = document.getElementById("downloadCV");
        // btn.addEventListener("click", () => {
        //   console.log("Descargando el documento");
        // });
        const sendMail = document.getElementById("SendMai0l");
        sendMail.addEventListener("click", () => {
          console.log("Enviar el mail");
        });
      </script>
      <a
        href="https://mail.google.com/mail/u/0/#inbox?compose=new"
        download
        target="_blank"
      >
        <svg
          id="SendMai0l"
          width="40px"
          height="40px"
          viewBox="0 0 32 32"
          version="1.1"
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          fill="#000000"
        >
          <g id="SVGRepo_bgCarrier" stroke-width="0"></g>

          <g
            id="SVGRepo_tracerCarrier"
            stroke-linecap="round"
            stroke-linejoin="round"></g>

          <g id="SVGRepo_iconCarrier">
            <title>send-email</title>
            <desc>Created with Sketch Beta.</desc>
            <defs> </defs>
            <g
              id="Page-1"
              stroke="none"
              stroke-width="1"
              fill="none"
              fill-rule="evenodd"
            >
              <g
                id="Icon-Set-Filled"
                transform="translate(-570.000000, -257.000000)"
                fill="none"
              >
                <path
                  d="M580.407,278.75 C581.743,281.205 586,289 586,289 C586,289 601.75,258.5 602,258 L602.02,257.91 L580.407,278.75 L580.407,278.75 Z M570,272 C570,272 577.298,276.381 579.345,277.597 L601,257 C598.536,258.194 570,272 570,272 L570,272 Z"
                  id="send-emailIcon"
                >
                </path>
              </g>
            </g>
          </g>
        </svg>
      </a>
    </div>
  </div>

  <div
    id="imagenPersonal"
    class="flex relative basis-3/6 sm:p-0 pr-[22px] flex-1 justify-center items-center h-[320px]"
  >
    <Imagen />
    <div class="icons h-[100%] w-10">
      <Icon
        class="absolute top-[10%] ml-4"
        icon="Facebook"
        size="40px"
        urlTo="https://www.facebook.com/marco.tkas13"
        gradient
      />
      <Icon
        class="absolute top-[32%] ml-12"
        icon="github"
        size="40px"
        urlTo="https://github.com/Marco-codeTKAS"
        gradient
      />
      <Icon
        class="absolute top-[57%] ml-12"
        icon="instagram"
        size="40px"
        urlTo="https://www.instagram.com/marcoramirez2544/"
        gradient
      />
      <Icon
        class="absolute top-[79%] ml-4"
        icon="linkedin"
        size="40px"
        urlTo="https://www.linkedin.com/in/marco-antonio-rentería-ramírez-96032317a"
        gradient
      />
    </div>
  </div>
  <style>
    .button:hover {
      background-image: var(--gradient-light);
    }
    .button {
      cursor: pointer;
    }
    .icons svg {
      position: absolute !important;
    }
    #send-emailIcon {
      fill: rgb(192, 192, 192);
      transition: fill 0.2s;
    }
    #SendMai0l {
      cursor: pointer;
    }
    #SendMai0l:hover #send-emailIcon {
      fill: var(--accent-light);
    }
    #imagenPersonal {
      background: radial-gradient(
        50% 50% at 50% 50%,
        rgba(175, 207, 225, 0.62) 0%,
        rgba(223, 223, 223, 0) 100%
      );
    }
  </style>
</section>
